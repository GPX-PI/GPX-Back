# ========== DATABASE CONFIGURATION ==========
# Configuración de la base de datos PostgreSQL
DATABASE_URL=jdbc:postgresql://your-db-host:5432/your-database-name
DATABASE_USERNAME=your-username
DATABASE_PASSWORD=your-secure-password

# ========== JWT CONFIGURATION ==========
# Clave secreta para JWT tokens (debe ser larga y segura)
JWT_SECRET=your-super-long-and-secure-jwt-secret-key-here

# ========== OAUTH2 CONFIGURATION ==========
# Configuración de Google OAuth2
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH2_REDIRECT_URI=http://localhost:8080/login/oauth2/code/google

# ========== FRONTEND CONFIGURATION ==========
# URL base para redirecciones del frontend
FRONTEND_REDIRECT_URL=http://localhost:3000/

# ========== CORS CONFIGURATION ==========
# Orígenes permitidos para CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000

# ========== SERVER CONFIGURATION ==========
# Puerto del servidor (para Render deployment)
PORT=8080

# ========== EMAIL CONFIGURATION ==========
# Configuración de email SMTP
EMAIL_USERNAME=your-email@example.com
EMAIL_PASSWORD=your-email-password

# ========== AWS CONFIGURATION ==========
# Configuración de AWS S3 para almacenamiento de archivos
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# ========== SONARCLOUD CONFIGURATION ==========
# Variables para análisis local de SonarCloud
SONAR_TOKEN=your-sonarcloud-token
SONAR_ORGANIZATION=your-sonarcloud-organization
SONAR_PROJECT_KEY=your-organization_your-project-key
